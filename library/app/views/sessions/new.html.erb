<% provide(:title, "Log in") %>
<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag '/sessions', method: "post" do %>

      <span>Email: </span><br>
    	<%= text_field_tag :email, nil, required: true %><br>

      <span>Password: </span><br>
    	<%= password_field_tag :password, nil, required: true %><br>

      <%= submit_tag "Login" %>
    <% end %>


    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>

  </div>
</div>
